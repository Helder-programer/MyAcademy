<div class="container-login">
    <div class="card-login">
        <h2>Login da área administrativa</h2>
        {{#if message}}
        <p class="login-message">{{message}}</p>
        {{/if}}
        <form action="" method="post">
            <div class="text-form-login">
                <input type="text" name="username" id="" class="form-control-login" autocomplete="off"
                    placeholder="Usuário">
                <label for="">Usuário</label>
            </div>
            <div class="text-form-login">
                <input type="password" name="password" class="form-control-login" placeholder="Senha">
                <label for="">Senha</label>
            </div>
            <button type="submit" class="btn-login">Entrar</button>
        </form>
    </div>
</div>