<div class="container">
    <h1>Artigos do Blog</h1>
    <form method="get" class="search-page-form">
        <input type="text"  name="search" autocomplete="off" class="form-control" placeholder="Digite aqui para realizar o filtro..." value="{{pageTitle}}">
        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
    <ul class="pages-list">
        {{#each page}}
        <li>
            <a href="/public/page/{{page_id}}">{{page_id}} - {{page_title}}</a>
            {{#if ../isUser}}
            <div class="icons-for-action">
                <a href="/auth/deletePage/{{page_id}}"><i class="fa-solid fa-trash"></i></a>
                <a href="/auth/editPage/{{page_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
            </div>
            {{/if}}
        </li>
        <hr>
        {{/each}}
    </ul>
</div>